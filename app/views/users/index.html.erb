<main>
	<p id="notice"></p>
	<div class="container px-5 px-sm-0">
		<div class="row">
			<%= render 'books/common', books: @books %>
			<div class="col-md-8 offset-md-1">
				<h2>Users</h2>
				<table class="table">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
						<tr>
							<td>
								<% if user.profile_image.attached? %>
				          <%= image_tag user.profile_image, size: "80x80" %>
				        <% else %>
				          <%= image_tag 'no_image', size: "80x80" %>
				        <% end %>
        			</td>
							<td><%= user.name %></td>
							<td><%= link_to user_path(user.id), class: user_path(user.id) do %>Show<% end %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</main>