<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/3341fb6481.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="nav nav-lg">
        <div class="container">
          <%= link_to root_path, class: :"navbar-brand" do %><span>Bookers</span><% end %>
          <div class="nav-area">
            <ul class="nav-list">
            <% if user_signed_in? %>
              <!-- ログインしているとき -->
              <li class="nav-list-item">
                <%= link_to user_path(current_user) do %><i class="fas fa-home"></i> Home<% end %>
              </li>
              <li class="nav-list-item">
                <%= link_to users_path do %><i class="fas fa-users"></i> Users<% end %>
              </li>
              <li class="nav-list-item">
                <%= link_to books_path do %><i class="fas fa-book-open"></i> Books<% end %>
              </li>
              <li class="nav-list-item">
                <%= link_to destroy_user_session_path, method: :delete do %><i class="fas fa-sign-out-alt"></i> Log out<% end %>
              </li>
            <% else %>
            <!-- ログインしていないとき -->
              <li class="nav-list-item">
                <%= link_to root_path do %><i class="fas fa-home"></i> Home<% end %>
              </li>
              <li class="nav-list-item">
                <%= link_to home_about_path do %><i class="fas fa-link"></i> About<% end %>
              </li>
              <li class="nav-list-item">
                <%= link_to new_user_registration_path do %><i class="fas fa-user-plus"></i> Sign up<% end %>
              </li>
              <li class="nav-list-item">
                <%= link_to new_user_session_path do %><i class="fas fa-sign-in-alt"></i> Log in<% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
